<mvc:View
	controllerName="mycompany.myapp.MyWorklistApp.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:headerContent>
			<IconTabBar
				id="iconTabBar"
				select=".onQuickFilter"
				expandable="false">
				<items>
					<IconTabFilter
						key="inquiry"
						icon="sap-icon://request"
						iconColor="Positive"
						count="{worklistView>/inquiry}"
						text="{i18n>WorklistFilterInquiry}"/>
					<IconTabSeparator/>
					<IconTabFilter
						key="contract"
						icon="sap-icon://customer-briefing"
						iconColor="Positive"
						count="{worklistView>/contract}"
						text="{i18n>WorklistFilterContract}"/>
					<IconTabSeparator/>
					<IconTabFilter
						key="purchaseOrder"
						icon="sap-icon://sales-document"
						iconColor="Positive"
						count="{worklistView>/purchaseOrder}"
						text="{i18n>WorklistFilterPurchaseOrder}"/>
					<IconTabSeparator/>
					<IconTabFilter
						key="delivery"
						icon="sap-icon://cargo-train"
						iconColor="Positive"
						count="{worklistView>/delivery}"
						text="{i18n>WorklistFilterDelivery}"/>
				</items>
				<content>
					<Table
						id="table"
						busyIndicatorDelay="{worklistView>/tableBusyDelay}"
						growing="true"
						growingScrollToLoad="true"
						noDataText="{worklistView>/tableNoDataText}"
						updateFinished=".onUpdateFinished"
						width="auto"
						mode="MultiSelect"
						items="{
							path: '/purchase_orderSet',
							sorter: {
								path: 'Ebeln',
								descending: false
							}
						}">
						<columns>
							<Column id="nameColumn">
								<Text
									id="nameColumnTitle"
									text="{i18n>TablePONumberColumnTitle}"/>
							</Column>
							<Column
								id="supplierNameColumn"
								demandPopin="false"
								minScreenWidth="Tablet">
								<Text text="{i18n>TableSupplierColumnTitle}"/>
							</Column>
							<Column
								id="UserNameColumn"
								hAlign="Center"
								demandPopin="true"
								minScreenWidth="Tablet">
								<Text text="{i18n>TableUserColumnTitle}"/>
							</Column>
							<Column
								id="CompanyNameColumn"
								hAlign="End"
								demandPopin="true"
								minScreenWidth="Tablet">
								<Text text="{i18n>TableCompanyColumnTitle}"/>
							</Column>
							
							<Column id="LanguageColumn"
								demandPopin="true"
								minScreenWidth="Tablet"
								hAlign="End">
								<Text text="{i18n>TableLanguageColumnTitle}"/>
							</Column>
						</columns>
					<items>
						<ColumnListItem
							type="Navigation"
							press=".onPress">
							<cells>
								<ObjectIdentifier
									title="{Ebeln}"/>
								<ObjectIdentifier title="{Name1}" text="{Lifnr}"/>
								<Text text = "{Ernam}"/>
								<Text text = "{Bukrs}"/>
								<ObjectStatus text = "{Spras}" state="{= ${Spras} === 'F' ? 'Success' : 'Error'}"/>
							</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</IconTabBar>
		</semantic:headerContent>

	</semantic:SemanticPage>
</mvc:View>